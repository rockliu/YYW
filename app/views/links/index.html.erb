<h1>Listing links</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th>Cover</th>
    <th>Template</th>
    <th>Order</th>
    <th>Hide</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.name %></td>
    <td><%= link.summary %></td>
    <td><%= link.cover %></td>
    <td><%= link.template %></td>
    <td><%= link.order %></td>
    <td><%= link.hide %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

